{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server ./src/mocks/mock-server-data.json --port 3123",
    "cli": "npm run build && node ./dist/main.cli.js",
    "cli:dev": "ts-node --esm src/main.cli.ts",
    "cli:help": "npm run cli:dev -- --help",
    "dev:rest": "tsx src/main.rest.ts",
    "dev:rest:port": "PORT=5000 tsx src/main.rest.ts",
    "dev": "tsx src/main.rest.ts",
    "dev:pretty": "tsx src/main.rest.ts | pino-pretty"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/inversify": "^2.0.32",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "convict-format-with-validator": "^6.2.0",
    "eslint": "^8.39.0",
    "eslint-config-htmlacademy": "^10.0.1",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "tsx": "^4.20.6",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "convict": "^6.2.4",
    "dotenv": "^17.2.3",
    "inversify": "^7.10.3",
    "json-server": "^1.0.0-beta.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2"
  },
  "bin": {
    "six-cities": "./dist/main.cli.js"
  }
}
